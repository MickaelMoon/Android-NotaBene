<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/radio_note"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Faire les courses pour l'anniversaire de Erwan"
                android:textColor="@color/text"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/radio_note"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="340dp" />

            <TextView
                android:id="@+id/date_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="IN TWO WEEKS"
                android:textColor="@color/primary100"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/radio_note"
                app:layout_constraintTop_toBottomOf="@id/description_note" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>
</androidx.cardview.widget.CardView>