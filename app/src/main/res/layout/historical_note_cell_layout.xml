<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_img"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_delete_forever"
            />

        <TextView
            android:id="@+id/description_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faire_les_courses_pour_l_anniversaire_de_erwan"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/delete_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="340dp"
            android:textColor="@color/text"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:id="@+id/date_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/in_two_weeks"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/delete_img"
            app:layout_constraintTop_toBottomOf="@id/category_note"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/category_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/category_name"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/delete_img"
            app:layout_constraintTop_toBottomOf="@id/description_note"
            android:textColor="@color/note_category1"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>